{% extends "_layout.twig"%}

{% block content %}
<br>
<h1>{{title}}</h1>
<hr>

{% if message %}
<div class="alert alert-info">
    {{message}}
    <a href="/totoro-object/{{id}}">Открыть страницу c отредактированными данными</a>
</div>
{% endif %}

<form action="" enctype="multipart/form-data" method="POST" class="row g-3">
    <div class="col-4">
        <label class="form-lable">Имя</label>
        <input type="text" class="form-control" name="title" value="{{object.title}}">
    </div>
    <div class="col-4">
        <label class="form-lable">Краткое описание</label>
        <input type="text" class="form-control" name="description" value="{{object.description}}">
    </div>
    <div class="col-4">
        <label class="form-lable">Тип</label>
        <select class="form-control" name="type">
            {% for type in types %}
                <option value="{{type.id}}" {% if type.id == object.type %}selected{% endif %}>{{type.type}}</option>                    
            {% endfor %}
        </select>        
    </div>
    <div class="mb-3">
        <label class="form-label">Картинка</label>
        <input class="form-control" type="file" name="image" value="{{object.image}}">
    </div>
    <div class="col-12">
        <textarea name="info" placeholder="Полное описание..." class="form-control" rows="5">{{object.info}}</textarea>
    </div>
    <div class="col-12 text-end">
        <button type="submit" class="btn btn-primary">Сохранить изменения</button>
    </div>
</form>

{% endblock %}