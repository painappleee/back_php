{% extends "_layout.twig"%}

{% block content %}
<br>

<ul class="list-group">  
  {% for item in menu %}
    {% if (item.url!="/") %}
    <li class="list-group-item">
      <a type="button" class="btn btn-primary me-3" href="{{item.url}}">{{item.title}}</a>
      <a class="me-3" href="{{item.url}}/image">Картинка</a>
      <a href="{{item.url}}/info">Описание</a>
    </li>
    {% endif %}
  {% endfor %}
</ul>

<br>

<p>{{text}}</p>

<img src="{{image}}" alt="{{image_alt}}" style="width: 500px;">
{% endblock %}